<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Song title"
            android:id="@+id/textViewSongtitle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:id="@+id/imageViewSongThumbnail"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/no_thumbnail"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="0px"
            android:layout_height="50dp"
            android:id="@+id/imageButtonSongRandom"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0px"
            android:layout_height="50dp"
            android:id="@+id/imageButtonSongPrevious"
            android:layout_weight="1"
            android:src="@drawable/btn_previous"
            android:background="@null" />

        <ImageButton
            android:layout_width="0px"
            android:layout_height="70dp"
            android:id="@+id/imageButtonSongPlay"
            android:layout_weight="1"
            android:src="@drawable/btn_play"
            android:background="@null" />

        <ImageButton
            android:layout_width="0px"
            android:layout_height="50dp"
            android:id="@+id/imageButtonSongNext"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/btn_next" />

        <ImageButton
            android:layout_width="0px"
            android:layout_height="50dp"
            android:id="@+id/imageButtonSongRepeat"
            android:layout_weight="1" />
    </LinearLayout>

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarSongProgress"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="45:27"
            android:id="@+id/textViewCurrentDuration"
            android:layout_weight="2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="59:33"
            android:id="@+id/textViewFullDuration"
            android:layout_weight="2"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</LinearLayout>